<div class="wrapper">
  <div class="wrapper-left">
    <div class="back-box" style="top: initial">
      <%= link_to root_path do %>
        <%= image_tag("m/menuBack.svg", class:'icon-small back') %>
      <% end %>
    </div>
    <h1 class="title" style="top: initial">Login</h1>
    <div class="wrapper-left-bg">
      <%= image_tag("bg/bgSketch.png") %>
    </div>
  </div>
  <div class="wrapper-right">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.email_field :email, placeholder: 'Email', autofocus: true, autocomplete: "email", class: 'form-input' %>
      </div>
    
      <div class="form-inputs">
        <%= f.password_field :password, placeholder: 'Password', autocomplete: "password", class: 'form-input' %>
      </div>
    
      <div class="actions">
        <%= f.submit "Log in", class: 'form-submit' %>
      </div>
    <% end %>
    
    <%= link_to 'Forgot password?' , new_user_password_path, class: 'guest-forgot' %>
  </div>
</div>

